<UserControl x:ConnectionId='1'
    x:Class="Sudoku.Cell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sudoku"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <local:Code2ColorConverter x:Key="themeConverter"/>
    </UserControl.Resources>


    <Grid Width="50" Height="50" >
        <Button x:ConnectionId='2' x:Name="btn"  
                Width="50" Height="50" BorderThickness="1"                                                                                                                             
                                                                                                                        >
            <Button.Resources>
                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="LightGray"/>
            </Button.Resources>
            <TextBlock x:ConnectionId='3' x:Name="tb"                                                    TextAlignment="Center" FontSize="25" FontFamily="Gill Sans MT" VerticalAlignment="Center" 
                                                                                                                               />
        </Button>
    </Grid>
</UserControl>

